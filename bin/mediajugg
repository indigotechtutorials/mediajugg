#!/usr/bin/ruby

require 'thor'
require 'media_jugg'

class MediaJuggCLI < Thor
  desc "audio URL", "downloads an audio from the matching source"
  def audio(url)
    puts "ðŸ”Š Downloading your audio now #{url}"
    MediaJugg.audio(url)
  end

  desc "video URL", "downloads a video from the matching source"
  def video(url)
    puts "ðŸ“¼ Downloading your video now #{url}"
    MediaJugg.video(url)
  end

  desc "subtitles URL", "downloads the subtitles from matching source"
  def subtitles(url)
    puts "ðŸ“ Downloading subtitles for video: #{url}"
    MediaJugg.subtitles(url)
  end
end

MediaJuggCLI.start(ARGV)